<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="医废详情"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/toolbar_bg_color"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginLeft="3dp"
                android:layout_marginStart="3dp"
                android:gravity="center_vertical"
                android:text="消化内科"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/light_black_3"
                android:textSize="@dimen/sp16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-02-14"
                android:textColor="@color/light_black_3"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tv_waste_type"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="化学性垃圾"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/light_black_3"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tv_sub_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胎盘"
                android:textColor="@color/light_black_3"
                android:textSize="@dimen/sp16" />

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="1dip"
            android:layout_height="4dp" />


        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编号："
            android:textColor="@color/light_black_3"
            android:textSize="@dimen/sp16" />

        <android.support.v4.widget.Space
            android:layout_width="1dip"
            android:layout_height="4dp" />

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="15dp"
        android:layout_height="1dip" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="0.25kg"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/tvSpeType"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="新冠"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/bg_type"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

</LinearLayout>
</LinearLayout>